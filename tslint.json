{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "trailing-comma": ["never"],
        "semicolon": [false, "never"],
        "member-access": false,
        "space-before-function-paren": [true, "always"],
        "jsx-self-close": true,
        "jsx-alignment": true,
        "ordered-imports": [false]
    }
}